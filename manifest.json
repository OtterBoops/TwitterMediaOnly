{
  "manifest_version": 3,

  "name": "Twitter Media Only Toggle",
  "version": "0.7.0",
  "description": "Add a button on twitter home that shows media only tweets.",
  "author": "Ru",
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "twittermediaonly@ottr.space"
    }
  }
}
